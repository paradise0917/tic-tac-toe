{
    "settings": {
        "react": {
          "version": "detect"
        }
    },
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["eslint:recommended",
        "plugin:react/recommended"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "react/prop-types": 0,
        "react/jsx-uses-react": "error",   
        "react/jsx-uses-vars": "error",
        "no-mixed-spaces-and-tabs": 0
    }
}